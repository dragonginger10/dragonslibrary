---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allBooks = await getCollection('books', ({ data }) => import.meta.env.PROD ? data.post : true);

// Sort by date descending and take the first 3
const recentBooks = allBooks
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<BaseLayout title="Welcome to Dragon‚Äôs Library" nav={true}>
  <section class="home-container">
    <h1>üìñ Welcome, Seeker of Stories</h1>
    <p class="intro">
      You‚Äôve stepped into a hidden library nestled between realms. Within these shelves lie reviews of tales gathered from shadowed corners and sunlit paths alike.
    </p>
    
    <div class="nav-buttons">
      <a href="/library">üìö Enter the Library</a>
      <a href="/about">‚ú® Learn About the Archive</a>
    </div>
  </section>

  <section class="recent-container">
    <h2>üïØÔ∏è Most Recently Read</h2>
    <ul>
      {recentBooks.map(book => (
        <li>
            <a href={`/books/${book.slug}`}>{book.data.title}</a> 
            {book.data.author ? `- ${book.data.author}` : ''}
        </li> 
      ))}
    </ul>
  </section>

  <style>
    .home-container {
      max-width: 800px;
      margin: 4rem auto 2rem;
      padding: 2rem;
      text-align: center;
      font-family: var(--font-serif);
      font-size: 1.25rem;
      color: var(--text);
    }

    h1 {
      font-size: 2.4rem;
      color: var(--lavender);
      margin-bottom: 1.5rem;
    }

    .intro {
      color: var(--subtext1);
      line-height: 1.75;
      margin-bottom: 2.5rem;
    }

    .nav-buttons {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .nav-buttons a {
      background-color: var(--surface1);
      border: 1px solid var(--mauve);
      color: var(--mauve);
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      transition: background-color 0.2s, color 0.2s;
    }

    .nav-buttons a:hover {
      background-color: var(--mauve);
      color: var(--base);
    }

    .recent-container {
      max-width: 800px;
      margin: 2rem auto 4rem;
      padding: 0 2rem;
      font-size: 1.125rem;
    }

    .recent-container h2 {
      text-align: center;
      color: var(--lavender);
      margin-bottom: 1rem;
    }

    .recent-container ul {
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: center;
    }

    .recent-container li {
      margin: 0.5rem 0;
    }

    .recent-container a {
      color: var(--lavender);
      text-decoration: none;
      font-weight: 600;
    }

    .recent-container a:hover {
      text-decoration: underline;
    }

  </style>
</BaseLayout>
