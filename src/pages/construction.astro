---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="Welcome to the Dragon's Library">
    <div class="center-box">
        <h2>This library is still being written...</h2>
        <p>Please check back soon as we fill the shelves with ancient tomes and arcane wisdom.</p>
    </div>
</BaseLayout>

<style>
    .center-box {
      max-width: 600px;
      margin: 3rem auto;
      padding: 2rem;
      background-color: var(--surface1);
      border: 2px solid var(--mauve);
      border-radius: 12px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    h2 {
      font-size: 2rem;
      color: var(--lavender);
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.2rem;
      color: var(--subtext1);
    }
</style>
